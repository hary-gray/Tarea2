<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/button"
        >
        <ImageView
            android:id="@+id/ivMyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perro"
            android:layout_marginBottom="@dimen/button"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivHuesoBlanco"
                android:layout_width="@dimen/hueso"
                android:layout_height="@dimen/hueso"
                android:src="@drawable/huesoblancoo"
                />
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="@dimen/espaciado"
                android:layout_height="wrap_content"
                android:text="@string/Nombre"
                android:textSize="@dimen/text25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/button"
                />
            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/text25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/button"
                />
            <ImageView
                android:id="@+id/ivHuesoAmarillo"
                android:layout_width="@dimen/hueso"
                android:layout_height="@dimen/hueso"
                android:src="@drawable/huesoamarilloo"
                android:layout_marginRight="@dimen/button"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>